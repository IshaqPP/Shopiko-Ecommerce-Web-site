<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/css/font-awesome.min.css" rel="stylesheet">
  <link href="/assets/css/style.css" rel="stylesheet">

  <title>Bootstrap 5 Login Page Design</title>
</head>

<body>
  <section class="form-01-main">
    <div class="form-cover">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="form-sub-main">
              <form id="admin-login" method="post">
                <div class="_main_head_as">
                  <a href="#">
                    <img src="/assets/images/vector.png">
                  </a>
                </div>
                
                <div id="Email-Err" class="text-danger"></div>
                <div class="form-group">
                  <input id="email" name="email" class="form-control _ge_de_ol" type="text" placeholder="Enter Email"
                    required="" aria-required="true">
                </div>

                <div id="Password-Err" class="text-danger"></div>
                <div class="form-group">
                  <input id="password" type="password" class="form-control" name="password" placeholder="********"
                    required="required">
                  <i toggle="#password" class="fa fa-fw fa-eye toggle-password field-icon"></i>
                </div>

                <div class="form-group">
                  <div class="check_box_main">
                    <a href="#" class="pas-text">Forgot Password</a>
                  </div>
                </div>

                <div class="form-group">
                 
                  <div class="btn_uy">
                     <button  type="submit" class="text-uppercase rounded-3" style="color:white;background-color: #37a000; width: 100%; height: 45px;">Login</button>
                    {{!-- <a href="#"><span>Login</span></a> --}}
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  $("#admin-login").submit((e) => {
    console.log($('#admin-login').serialize())
    e.preventDefault();
    $.ajax({
      url: '/admin/adminLogin',
      method: 'post',
      data: $('#admin-login').serialize(),
      success: (response) => {
        if (response.status) {
          location.href = "/admin";
        } else {

          if (response.msg == "Password is incorrect") {
            $('#password').css('border-color', 'red' )
            $('#Password-Err').text(response.msg)
          }
          else {
            $('#email').css('border-color', 'red')
            $('#Email-Err').text(response.msg)
          }

        }
      }
    })
  })
</script>