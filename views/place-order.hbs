    <div class="container" style="margin-top:2rem;">
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Your cart</span>
                    <span class="badge badge-secondary badge-pill">{{cartCount}}</span>
                </h4>
                <ul class="list-group mb-3">
                    {{#each cartProducts}}
                    <li class="list-group-item d-flex justify-content-between mb-1">
                        <div>
                            <img style="width:100px;" src="{{this.product.image.[0]}}" alt="Placholder Image 2">

                        </div>
                        <div class="col-5">
                            <span class="strong mb-3 fs-5">₹{{this.product.Price}} X {{this.quantity}}</span>
                            <div class="mt-3">
                                <h5 class="my-0 fw-bold">{{this.product.Brand}}</h6>
                                    <p class="my-0 mt-3 fw-normal fs-6">{{this.product.Product-Name}}</p>
                            </div>
                        </div>


                    </li>
                    {{/each}}
                    <li class=" list-group-item d-flex justify-content-between">
                        <span>Total</span>
                        <strong style="">₹ <class="" id="">{{total}}</strong>
                    </li>
                    <li class=" list-group-item d-flex justify-content-between">
                        <span>Offer</span>
                        <strong style="color:green;">-₹ <class="" id="coupon-offer"></strong>
                    </li>
                    <li class=" list-group-item d-flex justify-content-between">
                        <span>Total (INR)</span>
                        <strong>₹ <span id="final-amount">{{total}}</span>
                        </strong>
                    </li>
                </ul>
