<!-- Product -->
<div class="bg0 m-t-90 ">
	<div class="container">
		<div class="flex-w flex-sb-m p-b-52">
			<div class="flex-w flex-l-m filter-tope-group m-tb-10">
				{{#if Category}}
					<a href="/product" class=" stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 " >
					All Products
				</a>
				{{else}}
				<a href="/product" class=" stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" >
					All Products
				</a>
				{{/if}}
				{{!-- <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
					All Products
				</button> --}}
				{{#each category}}
				 {{#ifCheck ../Category this.category }}
				<a href="/product/{{this.category}}" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" >
					{{this.category}}
				</a>
				{{else}}
				<a href="/product/{{this.category}}" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 " >
					{{this.category}}
				</a>
				{{/ifCheck}}
				{{!-- <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5"
					onclick="sortCategory('{{this.category}}')">
					{{this.category}}
				</button> --}}
				{{!-- <a class="btn stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5"
					href="/products?search={{this.category}}">{{this.category}}</a> --}}

				{{/each}}
			</div>
			{{!-- <div class="flex-w flex-c-m m-tb-10">
				<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
					<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
					<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
					Filter
				</div>

				<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
					<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
					<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
					Search
				</div>
			</div> --}}

			<!-- Search product -->
			<div class="dis-none panel-search w-full p-t-10 p-b-15">
				<div class="bor8 dis-flex p-l-15">
					<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
						<i class="zmdi zmdi-search"></i>
					</button>

					<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product"
						placeholder="Search">
				</div>
			</div>

		</div>



		<div class="row isotope-grid">
			{{#each products}}
			<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
				<!-- Block2 -->
				<div class="block2  mb-4">
					<div class="block2-pic hov-img0">
						<img src={{this.image.[0]}} alt="IMG-PRODUCT">

						<a href="/product-details?prod_id={{this._id}}&category={{this.category}}"
							class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
							Quick View
						</a>

						{{#if this.currentOffer}}
						<div class="bg-danger rounded text-white position-absolute start-0 top-0 m-1 p-2 ">
							{{this.currentOffer}}% off</div>
						{{else}}
						<div class="bg-danger rounded text-white position-absolute start-0 top-0 m-1 p-2">
							0% off</div>
						{{/if}}
					</div>

					<div class="block2-txt flex-w flex-t p-t-14 ">
						<div class="block2-txt-child1 flex-col-l ">
							<a href="/product-details?prod_id={{this._id}}&category={{this.category}}"
								class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6 ms-4">
								{{this.Product-Name}}
							</a>

							<div class="mt-1 mb-1">
								{{#if this.currentOffer}}
								<span class="text-body text-decoration-line-through ms-4">₹{{this.Price}}</span>
								<span
								style="color:royalblue; margin-left: 100px;"><strong>₹{{this.offerPrice}}</strong></span>
								{{else}}
								<span
									style="color:royalblue; margin-left: 115px;"><strong>₹{{this.Price}}</strong></span>
								{{/if}}
							</div>


						</div>

						{{!-- <div class="block2-txt-child2 flex-r p-t-3 " >
							<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
								<img class="icon-heart1 dis-block trans-04" src="/user/images/icons/icon-heart-01.png"
									alt="ICON">
								<img class="icon-heart2 dis-block trans-04 ab-t-l"
									src="/user/images/icons/icon-heart-02.png" alt="ICON">
							</a>
							
						</div> --}}

						<div style="margin-left: 11px;">
							{{#if ../user}}
							<button onclick="addToCart('{{this._id}}')"
								class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-16 trans-04 mt-2 ms-5">
								Add to cart
							</button>
							{{else}}
							<a href="/login"
								class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-16 trans-04  mt-2 ms-5">Add
								to
								cart</a>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
			{{/each}}

		</div>


	</div>
</div>