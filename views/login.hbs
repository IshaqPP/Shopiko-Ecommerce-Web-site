<section class="vh-150" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black" style="margin-top:-35px;">

                <form id="login-form" method="post" >

                  <div class="d-flex align-items-center mb-1 pb-1">
                    <img src="/images/istockphoto-1266252971-612x612.jpg" alt="" style=" margin-left:-15px ; height: 90px;width: 90px;">
                    <i class="fas fa-cubes fa-2x me-1" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Shopiko</span>
                  </div>

                  <h5 class="fw-normal mb-2 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
                  <div id="Email-Err" class="text-danger"></div>
                  <div class="form-outline mb-4">
                    <input type="email" id="email" class="form-control form-control-lg" name="email" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" required/>
                    <label class="form-label" for="form2Example17">Email address</label>
                  </div>

                  <div id="Password-Err" class="text-danger"></div>
                  <div class="form-outline mb-4">
                    <input type="password" id="password" class="form-control form-control-lg" name="password" required/>
                    <label class="form-label" for="form2Example27">Password</label>
                  </div>

                  <div class=" pt-1 mb-2">
                    <button class="btn btn-dark btn-lg btn-block" type="submit" style="width: 100%;">Login</button>
                  </div>
                  
                  <div style="color: gray;font-size: large;font-weight: bold; text-align: center; margin-top: 1px; margin-bottom: 1px;">OR</div>

                  <div class=" pt-1 mb-4">
                    {{!-- <button class="btn btn-primary btn-lg btn-block" type="button" style="width: 100%;" >Login with otp</button> --}}
                    <a class="btn btn-primary btn-lg btn-block" style="width: 100%;" href="/otp-login">Login with otp</a>
                  </div>

                  <div>
                    <a class="small text-muted " href="#!" >Forgot password?</a>
                    
                  </div>
                  <div>
                    <p class="mt-1 mb-3 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/signup" style="color: #393f81;">Register here</a></p>
                  </div>
                      {{!-- 
                  <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a> --}}
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  $("#login-form").submit((e) => {
    e.preventDefault();
    $.ajax({
        url: '/login',
        type: 'post',
        data: $('#login-form').serialize(),
        success: (response) => {
            if (response.status) {
                location.href="/";
            } else {
                
                if(response.msg=="Password is incorrect"){
                  $('#password').css('border-color', 'red')
                  $('#Password-Err').text(response.msg)
                }
                else{
                  $('#email').css('border-color', 'red')
                  $('#Email-Err').text(response.msg)
                }
                
            }
        }
    })
})
</script>