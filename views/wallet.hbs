<link rel="stylesheet" type="text/css" href="/user/css/user-profile.css">

<div style="margin-top:5rem;">

    <div class="container mt-5">
        <div class="main-body mt-5">

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/profile">User Profile</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Wallet</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                    class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{user.username}}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Wallet</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Current Balance</h6>
                            {{#if wallet.walletBalance}}
                            <h3>₹ {{wallet.walletBalance}}</h3>
                            {{else}}
                            <h3>₹ 0</h3>
                            {{/if}}
                            <div class="d-flex justify-content-end">
                                <a href="/cart" class="btn btn-small btn-primary p-1">Go to Cart</a>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Your Referral Code</h5>
                            {{!-- <h6 class="card-subtitle mb-2 text-muted">Current Balance</h6> --}}
                            <h3 class="mt-3">{{wallet.referralId}}</h3>
                            <p>You can refer your freinds and earn ₹100 free...!!!</p>
                        </div>
                    </div>




                </div>


            </div>

        </div>
    </div>
</div>