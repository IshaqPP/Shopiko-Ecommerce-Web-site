<div class="d-flex justify-content-center align-items-center container">
  <form id="login-Mob-sub-form" method="post" >
        <div class="card py-5 px-3">
            <h5 class="m-0 mt-3 mb-3 text-center">Mobile phone verification</h5><span class="mobile-text ">We will send you an <b class="bold text-black">One Time Password </b> on this mobile number</span>
            <div id="Mob-Err" class="text-danger"></div>
            <div class="d-flex flex-row mt-4"><input type="text" class="form-control" autofocus="" placeholder="Mobile Number" name="mobile" id="Mobile"></div>
            {{!-- <a class="mt-3 btn btn-primary btn-lg btn-block" style="width: 97%;" href="/otp-mob-subt">GET OTP</a> --}}
            <button class="mt-3 btn btn-primary btn-lg btn-block" type="submit" style="width: 97%;">GET OTP</button>
        </div>
  </form>
</div>

<style>
    .card {
  width: 350px;
  padding: 10px;
  border-radius: 20px;
  background: #fff;
  border: none;
  height: 350px;
  position: relative;
}

.container {
  height: 100vh;
}

body {
  background: #eee;
}

.mobile-text {
  color: #989696b8;
  font-size: 15px;
}

.form-control {
  margin-right: 12px;
}

.form-control:focus {
  color: #495057;
  background-color: #fff;
  border-color: #ff8880;
  outline: 0;
  box-shadow: none;
}

.cursor {
  cursor: pointer;
}
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  $("#login-Mob-sub-form").submit((e) => {
    e.preventDefault();
    $.ajax({
        url: '/otp-login',
        type: 'post',
        data: $('#login-Mob-sub-form').serialize(),
        success: (response) => {
          console.log(response,'rrrrrrrrrrrrrrrrr')
            if (response.status) {
                console.log('rrrrrrrrrrrrrrrrr')
                $('#mobnum').text(response.phone)
               location.href="/otp-mob-subt/"+response.phone;
                

            } else {

                $('#Mobile').css('border-color', 'red')
                $('#Mob-Err').text(response.msg)  
            }
        }
    })
})
</script>